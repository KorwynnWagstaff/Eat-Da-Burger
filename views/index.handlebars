<h1>Eat-Da-Burger App</h1>
<main>
  <div class="container">
    <div class="row">
      <div class="col s6">
      <h2>In Stock</h2>
        {{#each burgers}}
          {{#unless this.devoured}}
            <div>
              <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
                <button type="submit" class='burgerAvailable'> {{this.burger_name}}</button>
              </form>
            </div>
          {{/unless}}
        {{/each}}
      </div>
      <div class="col s6">
      <h2>Eaten Burgers</h2>
        {{#each burgers}}
          {{#if this.devoured}}
            <div class='burgerEaten'>
              <div>
                {{this.burger_name}}
              </div>
            </div>
          {{/if}}
        {{/each}}
      </div>
    </div>
  </div>
</main>
<h2>Add New Burger</h2>
<div class="row">
  <div class="col s12">
    <form action="/burgers" method="POST">
      <input type="text" id="name" name="burger_name" placeholder="Spider-man Burger">
      <button type="submit" class="addBurgerButton">Add</button>
    </form>
  </div>
</div>
